<header>
	<div class="logo">
		spicedChange.org
	</div>
	<div class="menu">
		<a id="petition-link" class="menu-link" href="/petition">Sign the petition</a>
	</div>
	<div class="menu">
		<a id="profile-link" class="current" class="menu-link" href="/profile/edit">Edit my profile</a>
	</div>
	<div class="menu">
		<a id="signers-link" class="menu-link" href="/signers">Who has signed</a>
	</div>

	<div class="menu">
		<a id="logout-link" class="menu-link" href="/logout">Log out</a>
	</div>
</header>


<div id="profile-container">
    <img class="dog-small" src="\dogcode2.jpg" alt="">
    <h2 class="subtitle">Edit your profile</h2>
    {{#if errorMessage}}
	<h3 class="error">Don't forget the required fields</h3>
	{{/if}}
    <form method = "POST">
        {{#rows}}
    <p>First name</p>
    <input name="first" value={{first}}>
    <p>Last name</p>
    <input name="last" value={{last}}>
    <p>Email address</p>
    <input name="email" value={{email}}>
    <p>Password</p>
    <input type="password" name="password" value="">
    <p>Age</p>
    <input name="age" value={{age}}>
    <p>City</p>
    <input name="city" value={{city}}>
    <p>Home page</p>
    <input name="url" value={{url}}>
        {{/rows}}
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <button name="button">Submit</button>
    </form>
</div>
